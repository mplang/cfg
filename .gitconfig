    name = Michael P. Lang
    email = mlang@diameterhealth.com
[pull]
	ff = only
[core]
    editor = vim
[merge]
conflictstyle=diff3
tool=ultracompare
oldtool=gitmergetool

[mergetool "gitmergetool"]
	cmd = gitmergetool \"$BASE\" \"$REMOTE\" \"$LOCAL\" \"$MERGED\"

[mergetool "ultracompare"]
keepBackup=false
trustExitCode=false
prompt=false
cmd=\"/Applications/UltraCompare.app/Contents/MacOS/UltraCompare\" -gitm "$LOCAL" "$REMOTE" "$BASE" "$MERGED" -title1 "LOCAL" -title2 "REMOTE" -ff

[UC]
defdiffmerge=yes
defdiff=yes

[diff]
tool=ultracompare

[difftool "ultracompare"]
keepBackup=false
trustExitCode=false
prompt=false
cmd=\"/Applications/UltraCompare.app/Contents/MacOS/UltraCompare\" -gitdt "$LOCAL" "$REMOTE" "$BASE" "$MERGED" -title1 "LOCAL" -title2 "REMOTE" -ff
